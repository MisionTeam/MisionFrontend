{
  "parser": "babel-eslint",
  "parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"experimentalObjectRestSpread": true
		}
	},
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
		"es6": true,
		"node": true,
		"browser": true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
		"arrow-body-style": [
			"off"
		],
		"curly": [
			"error",
			"all"
		],
		"indent": [
			"error",
			2,
			{
				"SwitchCase": 1
			}
		],
    "jsx-quotes": ["error", "prefer-double"],
		"linebreak-style": [
			"error",
			"unix"
		],
		"max-len": [
			"off"
		],
		"new-cap": [
			"error", {
				"capIsNewExceptions": [
					"Immutable.Record",
					"Immutable.List",
					"Immutable.Stack",
					"Immutable.Map",
					"Immutable.OrderedMap",
					"Immutable.Set",
					"Immutable.OrderedSet",
					"ServerRecord"
				]
			}
		],
		"no-console": [
			"off"
		],
		"no-underscore-dangle": [
			"off"
		],
    "operator-linebreak": ["off"],
		"quotes": [
			"error",
			"single"
		],
		"react/jsx-indent": [
			"error",
			2
		],
		"react/jsx-indent-props": [
			"error",
			2
		],
		"react/prefer-stateless-function": [
			"off"
		],
		"semi": [
			"error",
			"always"
		],
		"spaced-comment": [
			"error",
			"always",
			{
				"block": {
					"exceptions": ["*"]
				}
			}
		],
    "space-before-function-paren": [
      "error",
      "never"
    ]
	},
}
